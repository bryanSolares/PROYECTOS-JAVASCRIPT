<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Account Register
            </div>
            <img src="/img/octocat-github.jpg" alt="Logo" class="rounded-circle mx-auto d-block m-4 logo">
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <input type="text" name="name" class="form-control" placeholder="Name" autofocus value="{{name}}">
                    </div>
                    <div class="form-group">
                        <input type="text" name="email" class="form-control" placeholder="Email" autofocus value="{{email}}">
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" class="form-control" placeholder="Password" autofocus value="{{password}}">
                    </div>
                    <div class="form-group">
                        <input type="password" name="confirm_password" class="form-control"
                            placeholder="Confirm Password" autofocus value="{{confirm_password}}">
                    </div>
                    <button class="btn btn-primary btn-block">Sign Up</button>
                </form>
            </div>
        </div>
    </div>
</div>