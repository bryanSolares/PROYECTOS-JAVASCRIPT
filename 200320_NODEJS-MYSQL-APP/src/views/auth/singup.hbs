<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Sing up</h3>
                </div>
                <div class="card-body">
                    <form action="/singup" method="POST">
                        <div class="form-group">
                            <input type="text" name="fullname" id="fullname" placeholder="Full Name" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="username" id="username" placeholder="User Name" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" id="password" class="form-control" placeholder="Password">
                        </div>
                        <form-group>
                            <button class="btn btn-success btn-block">SingUp</button>
                        </form-group>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>