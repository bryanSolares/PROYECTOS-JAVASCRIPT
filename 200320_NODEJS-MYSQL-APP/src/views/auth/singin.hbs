<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>SingIn</h3>
                </div>
                <div class="card-body">
                    <img src="/img/login.jpg" alt="Login" class="card-img-top mx-auto m-2 rounded-circle w-50">
                    <form action="/singin" method="POST">
                        <div class="form-group">
                            <input type="text" name="username" id="username" placeholder="User Name" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" id="password" class="form-control" placeholder="Password">
                        </div>
                        <form-group>
                            <button class="btn btn-success btn-block">SingIn</button>
                        </form-group>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>