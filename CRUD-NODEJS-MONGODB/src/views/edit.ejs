<%- include("partials/_header") %>

<div class="container">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <form action="/task/edit/<%= task.id %> " method="POST">
                        <div class="form-group">
                            <input type="text" name="title" placeholder="Title Task" class="form-control"
                                value="<%= task.title %> " autofocus>
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="10" placeholder="Description Taks"
                                class="form-control"><%= task.description %>  </textarea>
                        </div>
                        <button type="submit" class="btn btn-success btn-block">Update Task</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("partials/_footer") %>